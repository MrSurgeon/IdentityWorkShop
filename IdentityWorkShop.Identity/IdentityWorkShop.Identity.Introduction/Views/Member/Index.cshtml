@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_MemberLayout";
}
<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="col-md-3">
    <img style="width: 100%; height: 100%" src="@Model.Image" />
</div>
<div class="col-md-9">
    <table class="table table-bordered table-striped">
        <tr>
            <th>Kullanıcı İsmi</th>
            <td>@Model.UserName</td>
        </tr>
        <tr>
            <th>E-Posta</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Telefon Numarası</th>
            <td>@Model.PhoneNumber</td>
        </tr>
    </table>
</div>