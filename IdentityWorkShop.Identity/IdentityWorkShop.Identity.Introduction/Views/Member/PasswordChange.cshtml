@model IdentityWorkShop.Identity.Introduction.ViewModels.PasswordChangeViewModel

@{
    ViewData["Title"] = "PasswordChange";
    Layout = "~/Views/Member/_MemberLayout.cshtml";
}

<h4>Şifre Değiştirme</h4>
<hr />

@if (ViewBag.Success == "true")
{
    <div class="alert alert-info">Şifreniz başarıyla güncellenmiştir.</div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <form asp-action="PasswordChange" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="OldPassword" class="control-label"></label>
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewConfirmedPassword" class="control-label"></label>
                    <input asp-for="NewConfirmedPassword" class="form-control" />
                    <span asp-validation-for="NewConfirmedPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Şifre Değiştir" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}



